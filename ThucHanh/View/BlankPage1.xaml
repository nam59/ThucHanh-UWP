<Page
    x:Class="ThucHanh.View.BlankPage1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ThucHanh.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        
        <CommandBar HorizontalAlignment="Left">
            <AppBarButton Icon="Add" Label="Add" />
            <AppBarButton Icon="View" Label="View" />
        </CommandBar>

        <StackPanel HorizontalAlignment="Center">
            <RelativePanel>
                <TextBox Header="FileName" x:Name="FileName" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250"/>
            </RelativePanel>
            <RelativePanel>
                <TextBox Header="Content" x:Name="Content" VerticalAlignment="Top" HorizontalAlignment="Center" Width="250" Height="120"/>
            </RelativePanel>
            <Button x:Name="BtnSave" Margin="0, 30, 30, 0" Content="Save File" Click="Handle_Savefile"/>
        </StackPanel>
    </Grid>
</Page>
